<%- model_class = Allocation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:episode_id) %>:</strong></dt>
  <dd><%= @allocation.episode_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:practitioner_id) %>:</strong></dt>
  <dd><%= @allocation.practitioner_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allocation_type_id) %>:</strong></dt>
  <dd><%= @allocation.allocation_type_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              allocations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_allocation_path(@allocation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              allocation_path(@allocation),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
