<%- model_class = Allocation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:episode_id) %></th>
      <th><%= model_class.human_attribute_name(:practitioner_id) %></th>
      <th><%= model_class.human_attribute_name(:allocation_type_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @allocations.each do |allocation| %>
      <tr>
        <td><%= link_to allocation.id, allocation_path(allocation) %></td>
        <td><%= allocation.episode_id %></td>
        <td><%= allocation.practitioner_id %></td>
        <td><%= allocation.allocation_type_id %></td>
        <td><%=l allocation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_allocation_path(allocation), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      allocation_path(allocation),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_allocation_path,
            :class => 'btn btn-primary' %>
