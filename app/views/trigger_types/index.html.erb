<%- model_class = TriggerType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Print trigger</th>
      <th>Script trigger</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trigger_types.each do |trigger_type| %>
      <tr>
        <td><%= link_to trigger_type.id, trigger_type_path(trigger_type) %></td>
        <td><%= trigger_type.name %></td>

        <td align="center"><i class="icon-<%= trigger_type.is_print ? "ok" : "remove" %>"></i></td>
        <td align="center"><i class="icon-<%= trigger_type.is_script ? "ok" : "remove" %>"></i></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_trigger_type_path(trigger_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      trigger_type_path(trigger_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trigger_type_path,
            :class => 'btn btn-primary' %>
