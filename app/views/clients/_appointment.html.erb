<tr class="warning">
  <td></td>
	<td colspan=2><i class="icon-time"></i>&nbsp;Appointment</td>
	<td><%= appointment.appointment_date %> <%= appointment.appointment_time %></td>
	<td><%= [appointment.status, appointment.outcome].grep(/./).join "/" %></td>
	<td>
		<%= link_to "Modify".html_safe, edit_appointment_path(appointment), :class => 'btn btn-mini span1' %>
	</td>
	<td>
		<%= link_to t('.delete', :default => t("helpers.links.delete")),
								appointment_path(appointment),
								:method => :delete,
								:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
								:class => 'btn btn-mini btn-danger span1' if current_user.admin?
		%>
	</td>
	<td></td>
</tr>
