<%- model_class = Venue -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize %>
		<%= link_to t('.new_venue', :default => t("helpers.links.new_venue")),
			new_venue_path(), :class => 'btn'
		%>

   </h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:postcode) %></th>
      <th colspan=4 width=10%><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.address %></td>
        <td><%= venue.postcode %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      venue_path(venue), :class => 'btn btn-mini' %>
				</td>
				<td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_venue_path(venue), :class => 'btn btn-mini' %>
				</td>
				<td>
					<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      venue_path(venue),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
				</td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @venues %>
