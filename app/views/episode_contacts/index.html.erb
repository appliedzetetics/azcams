<% @episode_contacts.each do |episode_contact| %>
  <tr>
    <td><%= episode_contact.contacted %></td>
    <td><%= episode_contact.episode %></td>
    <td><%= episode_contact.from_client %></td>
    <td><%= episode_contact.contact_type %></td>
    <td><%= episode_contact.contact_action %></td>
    <td><%= episode_contact.user %></td>
    <td><%= episode_contact.notes %></td>
    <td><%= link_to 'Show', episode_contact %></td>
    <td><%= link_to 'Edit', edit_episode_contact_path(episode_contact) %></td>
    <td><%= link_to 'Destroy', episode_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

