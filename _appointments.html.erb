<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th width=5%></th>
      <th>Date/time</th>
      <th>Status</th>
      <th>Outcome</th>
    </tr>
  </thead>
  <tbody>
    <% episode.allocations.each do |a| %>
      <tr>
        <td></td>
        <td colspan=3><font size="+1">Allocated to: <strong><%= a.practitioner.fullname %></strong> for <strong><%= a.allocation_type %></strong></font></td>
      </tr>
      <% a.appointments.each do |p| %>
        <tr>
          <td></td>
          <td><%= p.appointment_date.strftime("%a %m/%d/%Y") %>&nbsp;<%= p.appointment_time %></td>
          <td><%= p.appointment_status %></td>
          <td><%= p.outcome %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
